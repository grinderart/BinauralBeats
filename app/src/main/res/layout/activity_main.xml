<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#121212"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generador de Frecuencias"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <com.example.binauralbeats.VisualizerView
                android:id="@+id/visualizerView"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleTextView" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/categoryMenuLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Selecciona Categoría"
                app:layout_constraintTop_toBottomOf="@id/visualizerView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:boxStrokeColor="#FFFFFF"
                app:hintTextColor="#FFFFFF"
                android:textColorHint="#B0B0B0">
                <AutoCompleteTextView
                    android:id="@+id/categoryAutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="#FFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/frequencyMenuLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Selecciona Frecuencia"
                app:layout_constraintTop_toBottomOf="@id/categoryMenuLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/infoButton"
                android:layout_marginEnd="8dp"
                app:boxStrokeColor="#FFFFFF"
                app:hintTextColor="#FFFFFF"
                android:textColorHint="#B0B0B0">
                <AutoCompleteTextView
                    android:id="@+id/frequencyAutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="#FFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/infoButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_info"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:tint="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/frequencyMenuLayout"
                app:layout_constraintBottom_toBottomOf="@id/frequencyMenuLayout"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/timerMenuLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Duración del Temporizador"
                app:layout_constraintTop_toBottomOf="@id/frequencyMenuLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:boxStrokeColor="#FFFFFF"
                app:hintTextColor="#FFFFFF"
                android:textColorHint="#B0B0B0">
                <AutoCompleteTextView
                    android:id="@+id/timerAutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="#FFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/volumeLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Volumen Frecuencia"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/timerMenuLayout" />

            <SeekBar
                android:id="@+id/volumeSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="100"
                android:progress="100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/volumeLabelTextView" />

            <LinearLayout
                android:id="@+id/controlsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/volumeSeekBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/playButton"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:text="Play"
                    android:backgroundTint="#4CAF50"
                    app:cornerRadius="16dp"
                    android:layout_marginEnd="16dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/stopButton"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:text="Stop"
                    android:backgroundTint="#F44336"
                    app:cornerRadius="16dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: Detenido"
                android:textColor="#B0B0B0"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/controlsLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/countdownTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#4CAF50"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/statusTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#444444"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/countdownTextView" />

            <TextView
                android:id="@+id/ambientTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mezclador Ambiental"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/ambientIconsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/ambientTitleTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/rainSoundButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_rain"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:layout_marginHorizontal="16dp"
                    app:tint="#FFFFFF" />
                <ImageView
                    android:id="@+id/fireSoundButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_fire"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:layout_marginHorizontal="16dp"
                    app:tint="#FFFFFF" />
                <ImageView
                    android:id="@+id/forestSoundButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_forest"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:layout_marginHorizontal="16dp"
                    app:tint="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:id="@+id/ambientVolumeLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Volumen Ambiental"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ambientIconsLayout" />

            <SeekBar
                android:id="@+id/ambientVolumeSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="100"
                android:progress="50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ambientVolumeLabelTextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
